#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

&mt {
    flavor = "tap-preferred";

    // tapping_term_ms = <400>;
};

/ {
    combos {
        compatible = "zmk,combos";

        tab {
            bindings = <&kp ESC>;
            key-positions = <5 4>;
        };

        new_combo {
            bindings = <&to 4>;
            key-positions = <20 29>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        default_layer {
            bindings = <
      &kp Q       &kp W         &kp F        &kp P        &kp B        &kp J        &kp L         &kp U       &kp Y  &kp SEMICOLON
 &mt LGUI A  &mt LALT R  &mt LSHIFT S  &mt LCTRL T        &kp G        &kp M  &mt LCTRL N  &mt RSHIFT E  &mt LALT I     &mt LGUI O
      &kp Z       &kp X         &kp C        &kp D        &kp V        &kp K        &kp H     &kp COMMA     &kp DOT      &kp SLASH
                                         &lt 3 TAB  &lt 1 SPACE  &lt 2 ENTER     &kp BSPC
            >;
        };

        nav {
            bindings = <
 &kp NUMBER_4  &kp NUMBER_5  &kp NUMBER_6      &none   &none      &none    &kp LEFT_BRACE    &kp RIGHT_BRACE  &kp LEFT_PARENTHESIS  &kp RIGHT_PARENTHESIS
 &kp NUMBER_1  &kp NUMBER_2  &kp NUMBER_3  &kp LCTRL   &none  &kp LSHFT    &kp LEFT_ARROW     &kp DOWN_ARROW          &kp UP_ARROW        &kp RIGHT_ARROW
 &kp NUMBER_7  &kp NUMBER_8  &kp NUMBER_9      &none   &none      &none  &kp LEFT_BRACKET  &kp RIGHT_BRACKET         &kp LESS_THAN       &kp GREATER_THAN
                                               &none   &none   &kp LGUI          &kp LALT
            >;
        };

        symbols {
            bindings = <
 &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans
 &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans
 &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans
                         &trans  &trans  &trans  &trans
            >;
        };

        bluetooth {
            bindings = <
 &trans  &trans  &trans  &trans  &trans  &trans      &trans      &trans  &trans  &trans
 &trans  &trans  &trans  &trans  &trans  &trans  &bt BT_NXT  &bt BT_CLR  &trans  &trans
 &trans  &trans  &trans  &trans  &trans  &trans      &trans      &trans  &trans  &trans
                         &trans  &trans  &trans      &trans
            >;
        };

        Gaming {
            bindings = <
 &kp NUMBER_1  &kp NUMBER_2  &kp NUMBER_3  &kp NUMBER_4  &kp NUMBER_5  &trans  &trans  &trans  &trans   &to 0
      &kp TAB         &kp A         &kp W         &kp D  &kp NUMBER_6  &trans  &trans  &trans  &trans  &trans
       &trans        &trans         &kp S         &kp F  &kp NUMBER_7  &trans  &trans  &trans  &trans  &trans
                                           &kp NUMBER_8     &kp SPACE  &trans  &trans
            >;
        };
    };
};
